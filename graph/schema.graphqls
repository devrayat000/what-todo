# GraphQL schema example
#
# https://gqlgen.com/getting-started/

type Todo {
  _id: ID!
  todo: String!
  done: Boolean!
  createdAt: String!
}

type Query {
  todos: [Todo!]!
  todo(id: ID!): Todo!
}

type Mutation {
  createTodo(text: String!): Todo!
  updateTodo(id: ID!, text: String!): Todo!
  deleteTodo(id: ID!): Todo!
  toggleDone(id: ID!): Todo!
}

type Subscription {
  todoAdded: Todo
  todoUpdated(id: ID!): Todo
  todoDeleted(id: ID!): Todo
}
